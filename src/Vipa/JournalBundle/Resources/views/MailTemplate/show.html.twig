{% extends '::ojsbase.html.twig' %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('ojs_journal_dashboard_index', {journalId: selectedJournal().id}), 'title': 'dashboard'|trans},
    {'link': path('ojs_journal_mail_template_index', {'journalId': selectedJournal().id}),'title': 'mail.template'|trans},
    {'title': 'title.mail_template_show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ 'title.mail_template_show'|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ display(entity) }}

    {{
    actions({
        'back': {'href': path('ojs_journal_mail_template_index', {'journalId': selectedJournal().id})},
        'edit': {'href': path('ojs_journal_mail_template_edit', {'id': entity.id, 'journalId': selectedJournal().id})},
    })
    }}
{% endblock %}
