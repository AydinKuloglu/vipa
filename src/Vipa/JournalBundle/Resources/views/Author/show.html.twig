{% extends '::vipabase.html.twig' %}
{% block title %}{{ 'title.author_show'|trans }} {{ parent() }}{% endblock %}
{% block breadcrumb %}
    {% set list = [
    {'link': path('vipa_journal_dashboard_index', {journalId: selectedJournal().id}), 'title': 'dashboard'|trans},
    {'link': path('vipa_journal_author_index', {'journalId': selectedJournal().id}), 'title': 'author.manager'|trans},
    {'title' : 'title.author_show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ "author.singular"|trans }}
        <small>{% if entity.user %} {{ "linked.user"|trans }} : &#x3C;{{ entity.user.username }}&#x3E; {{ entity.user.email }} {% endif %}</small>
    </h1>
    {% include '::flashbag.html.twig' %}
    {{ display(entity) }}
    {{
    actions({
        'back': {'href': path('vipa_journal_author_index', {'journalId': selectedJournal().id})},
        'edit': {'href': path('vipa_journal_author_edit', {'id': entity.id, 'journalId': selectedJournal().id})},
        'delete': {'href': path('vipa_journal_author_delete', {'id': entity.id, 'journalId': selectedJournal().id}), 'attributes': {'data-token': token}},
    })
    }}
{% endblock %}