{% extends '::vipabase.html.twig' %}
{% block title %}{{ 'title.journal_index_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('vipa_journal_dashboard_index', {journalId: selectedJournal().id}), 'title': 'dashboard'|trans},
    {'link': path('vipa_journal_index_index', {'journalId': selectedJournal().id}),'title': 'journalindex.list'|trans},
    {'title': 'title.journal_index_show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ 'journalindex.plural'|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ display(entity) }}
    {{ actions({
        'back': {'href': path('vipa_journal_index_index', {'journalId': selectedJournal().id})},
        'edit': {'href': path('vipa_journal_index_edit', {'id': entity.id, 'journalId': selectedJournal().id})},
        'delete': {'href': path('vipa_journal_index_delete', {'id': entity.id, 'journalId': selectedJournal().id}), 'attributes': {'data-token': token}},
    }) }}

{% endblock %}
