{% extends '::vipabase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.period_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    {'link': path('vipa_admin_period_index'),'title': 'article.types'|trans},
    {'title': 'show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ entity|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ display(entity) }}
    {% set back_path = 'vipa_admin_period_index' %}
    {% if is_granted('EDIT', entity) %}
        {% set edit_path = 'vipa_admin_period_edit' %}
    {% endif %}
    {% if is_granted('DELETE', entity) %}
        {% set delete_path = 'vipa_admin_period_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
