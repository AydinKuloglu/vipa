{% extends '::vipabase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.publisher_design_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('vipa_admin_dashboard'), 'title': 'dashboard'|trans},
    { 'link': path('vipa_admin_publisher_design_index'),'title': 'title.publisher_design'|trans},
    {'title': 'title.publisher_design_show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ entity.title|trans }}</h1>
    {% include '::flashbag.html.twig' %}
    {{ display(entity) }}
    {% set back_path = 'vipa_admin_publisher_design_index' %}
    {% if is_granted('EDIT', entity) %}
        {% set edit_path = 'vipa_admin_publisher_design_edit' %}
    {% endif %}
    {% if is_granted('DELETE', entity) %}
        {% set delete_path = 'vipa_admin_publisher_design_delete' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
