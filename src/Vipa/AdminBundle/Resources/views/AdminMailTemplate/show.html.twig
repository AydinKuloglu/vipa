{% extends '::ojsbase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.mail_template_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('ojs_admin_dashboard'), 'title': 'dashboard'|trans},
    { 'link': path('ojs_admin_mail_template_index'),'title': 'title.mail_templates'|trans},
    {'title': 'title.mail_template_show'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <h1>{{ entity.type|trans }}</h1>

    {% include '::flashbag.html.twig' %}
    {{ display(entity) }}
    {% set back_path = 'ojs_admin_mail_template_index' %}
    {% if is_granted('EDIT', entity) %}
        {% set edit_path = 'ojs_admin_mail_template_edit' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
