{% extends '::vipabase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.user_show'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
        {'link': path('vipa_admin_dashboard'), 'title': 'dashboard'|trans},
        { 'link': path('vipa_admin_user_index'), 'title': 'title.users'|trans},
        { 'title': 'title.user_show'|trans},
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body %}
    {% include '::flashbag.html.twig' %}
    <h1>{% if entity.avatar %}
            <img class="thumbnail pull-left" style="margin-right:5px;"
                 src="{{ entity.avatar|imagine_filter('avatar_thumb') }}"/>
        {% endif %}
        {{ entity.username }}

    </h1>
    {{ display(entity, {exclude: ['salt', 'groups']}) }}
    {% set back_path = 'vipa_admin_user_index' %}
    {% if is_granted('EDIT', entity) %}
        {% set edit_path = 'vipa_admin_user_edit' %}
    {% endif %}
    {% include '::actionbuttons.html.twig' %}
{% endblock %}
