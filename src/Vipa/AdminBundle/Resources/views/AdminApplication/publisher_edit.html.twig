{% extends '::vipabase.html.twig' %}
{% set hideleft = true %}
{% block title %}{{ 'title.publisher_edit'|trans }} {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {% set list = [
    {'link': path('dashboard'), 'title': 'dashboard'|trans},
    { 'link': path('vipa_admin_application_publisher_index'),'title': 'application.journal.publisher'|trans},
    {'title': 'edit'|trans}
    ] %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body -%}
    <div class="col-md-12">
        <div class="panel">
            <h1>{{ "application.publisher.edit"|trans }}</h1>
            {{ form(form) }}
            <a class="btn btn-success" href="{{ url('vipa_admin_application_publisher_save', {id: entity.id}) }}">
                {{ "institute.merge_as_new_institute"|trans }}
            </a>
            {{ getLogs(entity) }}
        </div>
    </div>
{% endblock %}
