{% extends 'OjsOAIBundle:Default:layout.xml.twig' %}
{% block content %}
    <request verb="ListIdentifiers" metadataPrefix="oai_dc" set="Ä°stanbul Yerbilimleri Dergisi">
        http://{{ base_host }}/api/oai
    </request>
    <ListIdentifiers>
        {% for record in articles %}
            <header>
                <identifier>oai:{{ base_host }}:record/{{ record.id }}</identifier>
                <datestamp>{{ record.submissionDate|date("Y-m-d\\TH:i:s\\Z") }}</datestamp>
                <setSpec>{{ record.journal.slug }}</setSpec>
            </header>
        {% endfor %}
    </ListIdentifiers>
{% endblock %}
