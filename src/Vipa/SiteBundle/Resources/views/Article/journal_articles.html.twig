{% extends '::ojsbase.html.twig' %}
{% block title %}{{ 'title.journal_articles'|trans }} {{ parent() }}{% endblock %}
{% set hideleft = 1 %}
{% block stylesheets %}
    {{ parent() }}

    <style type="text/css">
        .float-left {
            float: left;
            margin-right: 10px;
        }
    </style>
{% endblock %}
{% block breadcrumb %}
    {% if isJournalHosting is defined and isJournalHosting == true %}
        {% set list = [
        {'link': path('ojs_public_index'), 'title': journal.title},
        {'title': "articles"|trans}
        ] %}
    {% else %}
        {% set list = [
        {'link': path('ojs_public_index'), 'title': project_name},
        {'link':generateJournalUrl(journal), 'title': journal.title},
        {'title': "articles"|trans}
        ] %}
    {% endif %}
    {{ breadcrumb(list) }}
{% endblock %}

{% block body %}

    <div class="container">
        <br>
        <!-- The carousel -->
        <div class="page-header">
            <img src="
                {% if journal.issues|length and journal.issues[journal.issues|length-1].cover is not null %}
                    {{ journal.issues[journal.issues|length-1].cover|imagine_filter('issue_cover') }}
                {% endif %}"
                 class="img-responsive float-left tri"/>
            <div>
                <h1>{{ journal.title }}</h1>
                <h6>{{ journal.subtitle }}</h6>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="row">
            <div class="col-md-9 col-sm-8">
                <div class="panel panel-default">

                    <ul class="list-group">
                        {% for article in articles %}
                                <li class="list-group-item list-group-item-default">

                                    {% if article.issue is not empty %}
                                        <a href="{{ url('ojs_article_page',{article_id: article.id,slug: journal.slug, issue_id: article.issue.id}) }}">
                                            <i class="fa fa-file-text"></i> {{ article.title }}
                                        </a>
                                    {% else %}
                                        <a href="{{ url('ojs_article_withoutIssue_page',{article_id: article.id,slug: journal.slug}) }}">
                                            <i class="fa fa-file-text"></i> {{ article.title }}
                                        </a>
                                    {% endif %}

                                    <br/>
                                    <i class="fa fa-users"></i>
                                    <span class="text-muted">
                                        (
                                        {% if article.created.date %}
                                            {{ article.created.date|date('Y-m-d') }}
                                        {% endif %}
                                        )
                                    </span>
                                </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
                {% include 'OjsSiteBundle:Journal:journal_right_block.html.twig' %}
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        analytics.increase('journal', {{ journal.id }})
    </script>
{% endblock %}
